<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="16dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="앱 선택" />

    <Spinner
        android:id="@+id/spinnerApps"
        android:layout_width="match_parent" android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvSelectedApp"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="선택 앱: 없음" android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="받는 번호" android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:hint="예: 01012345678" android:inputType="phone" />

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="알림 필터 (선택)" android:textStyle="bold" android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="알림 내용에 특정 단어가 포함된 경우에만 SMS 전송" 
        android:textSize="12sp" android:textColor="#666666" android:layout_marginTop="4dp" />

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="보낸사람 단어 필터" android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/etSenderName"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:hint="예: OO은행 (알림에 이 단어가 포함된 경우만 전송)"
        android:inputType="text"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/layoutSenderNumber"
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="보낸사람 번호 필터 (SMS 앱용)" android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etSenderNumber"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="예: 01012345678 (SMS 발신자 번호가 포함된 경우만 전송)" 
            android:inputType="phone"
            android:textSize="12sp" />

    </LinearLayout>


    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="저장" android:layout_marginTop="24dp" />
</LinearLayout>
