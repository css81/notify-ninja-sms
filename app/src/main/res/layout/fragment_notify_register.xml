<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="16dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="앱 선택" />

    <Spinner
        android:id="@+id/spinnerApps"
        android:layout_width="match_parent" android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvSelectedApp"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="선택 앱: 없음" android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="받는 번호" android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:hint="예: 01012345678" android:inputType="phone" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="저장" android:layout_marginTop="24dp" />
</LinearLayout>
